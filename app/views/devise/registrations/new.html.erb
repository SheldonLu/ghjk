<div class="content">
  <div class="box">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= render "shared/error_messages", :target => resource %>
        <fieldset>
          <legend>注册新用户</legend>
          <%= f.input :login, :required => true %>
          <%= f.input :email, :required => true, :input_html => { :class => "span4", :placeholder => "diaoyudao@china.com" } %>

          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <div class="form-actions">
            <%= f.submit "提交注册信息", :class => "btn btn-primary", 'data-disable-with' => t("common.submitting")  %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>

<div class="sidebar">
  <div class="box">
    <h2><%= t("users.already_have_account")%></h2>
    <p style="line-height:20px;">
      <%= render :partial => "devise/shared/links" %>
    </p>
  </div>
</div>
